---
const { class: className = 'size-5' } = Astro.props;
---

<!-- Iconos adaptativos según el navegador -->
<div {...Astro.props} class={className}>
  <!-- Apple SF Symbol para Safari/macOS -->
  <svg class="apple-icon" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
    <circle cx="12" cy="12" r="4.5" fill="currentColor"/>
    <path d="M12 1.5v3M12 19.5v3M22.5 12h-3M4.5 12h-3" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round"/>
    <path d="M18.364 5.636l-2.121 2.121M7.757 16.243l-2.121 2.121M18.364 18.364l-2.121-2.121M7.757 7.757L5.636 5.636" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round"/>
  </svg>
  
  <!-- Icono genérico para otros navegadores -->
  <svg class="generic-icon" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
    <circle cx="12" cy="12" r="5" fill="currentColor"/>
    <path d="M12 2v4M12 18v4M22 12h-4M6 12H2" 
          stroke="currentColor" 
          stroke-width="2.5" 
          stroke-linecap="round"/>
    <path d="M19.07 4.93l-2.83 2.83M7.76 16.24l-2.83 2.83M19.07 19.07l-2.83-2.83M7.76 7.76L4.93 4.93" 
          stroke="currentColor" 
          stroke-width="2.5" 
          stroke-linecap="round"/>
  </svg>
</div>

<style>
  /* Por defecto mostrar el genérico */
  .apple-icon { display: none; }
  .generic-icon { display: block; }
  
  /* En Safari/macOS mostrar el SF Symbol */
  @supports (-webkit-backdrop-filter: none) {
    .apple-icon { display: block; }
    .generic-icon { display: none; }
  }
  
  /* Detectar específicamente Safari */
  @media not all and (min-resolution: .001dpcm) {
    @supports (-webkit-appearance: none) and (stroke-color: transparent) {
      .apple-icon { display: block; }
      .generic-icon { display: none; }
    }
  }
</style>
