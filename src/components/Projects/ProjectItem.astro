---
import type { Project } from '../../types/projects';
import Carousel from '@components/Carousel';
import ProjectHeader from './ProjectComponents/ProjectHeader.astro';
import ProjectTags from './ProjectComponents/ProjectTags.astro';
import ProjectFooter from './ProjectComponents/ProjectFooter.astro';

export interface Props {
  project: Project;
  buttons: {
    textCodeButton: string;
    textDemoButton: string;
    textDemo2Button: string;
  };
}

const { project, buttons } = Astro.props;
const { images } = project;
---

<!-- Encabezado del proyecto (título y descripción) -->
<ProjectHeader project={project} />

<!-- Etiquetas del proyecto -->
<ProjectTags project={project} />

<!-- Carousel de imágenes -->
<Carousel client:load images={images} />

<!-- Enlaces del proyecto -->
<ProjectFooter project={project} buttons={buttons} />
