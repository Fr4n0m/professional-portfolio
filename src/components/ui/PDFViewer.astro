---
export interface Props {
  url: string;
  title: string;
  download?: boolean;
}

const { url, title, download = false } = Astro.props;
---

<iframe
  src={url}
  width="100%"
  height="532"
  class="rounded-lg shadow-lg border-2 border-gray-200 dark:border-gray-700"
  title={title}
  loading="lazy"
  {...download && { download: true }}
></iframe>

<style>
  /* Ajustes responsive para el iframe */
  @media (max-width: 768px) {
    iframe {
      height: 392px;
    }
  }
  
  /* Para pantallas muy peque√±as */
  @media (max-width: 480px) {
    iframe {
      height: 332px;
    }
  }
</style>
