---
/**
 * ThemeIcon.astro
 * Componente base para iconos de tema con estilos y comportamientos comunes
 */

export interface Props {
  id: string;
  class?: string;
  isActive?: boolean;
}

const { id, class: className = '', isActive = false } = Astro.props;
const baseClasses = 'theme-toggle-icon transition-all';
const activeClass = isActive ? '' : 'absolute';
const combinedClasses = `${baseClasses} ${activeClass} ${className}`;
---

<span id={id} class={combinedClasses}>
  <slot />
</span>

<style>
  .theme-toggle-icon {
    transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>
