---
/**
 * BadgeDot.astro - Componente para el punto animado del badge
 */

// Props simple para permitir personalización
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<span class={`badge-dot ${className}`}></span>

<style>
  /* Puntito en la esquina superior derecha */
  .badge-dot {
    position: absolute;
    right: -2px;
    top: -1px;
    transform: scale(0);
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background-color: #26A35A; /* Verde más oscuro para modo claro */
    transition: all 0.3s ease;
    box-shadow: 0 0 4px rgba(38, 163, 90, 0.7);
    opacity: 0;
  }
  
  /* Modo oscuro */
  :global(.dark) .badge-dot {
    background-color: #4AE591;
    box-shadow: 0 0 4px rgba(74, 229, 145, 0.8);
  }
  
  /* Para dispositivos móviles el puntito es aún más pequeño */
  @media (max-width: 768px) {
    .badge-dot {
      width: 3px;
      height: 3px;
      right: -1px;
      top: -1px;
    }
  }
</style>
