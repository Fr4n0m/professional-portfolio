---
interface Props {
  title: string;
  subtitle?: string;
  icon?: string;
}

const { title, subtitle, icon } = Astro.props;
---

<div class="w-full border-b border-gray-200 dark:border-gray-800 mb-8 pt-28 md:pt-32 lg:pt-36">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl py-6">
    <div class="flex flex-col items-start">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2 tracking-tight">
        {title}
      </h1>
      {subtitle && (
        <p class="text-lg text-gray-600 dark:text-gray-400">
          {subtitle}
        </p>
      )}
    </div>
  </div>
</div>
