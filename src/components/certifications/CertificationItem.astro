---
import type { Certification } from '../../types/certification';
import type { Translations } from '../../types/translations';
import { ENTITIES } from '@utils/entities';
import Entity from '../Entity.astro';
import PDFViewer from '../ui/PDFViewer.astro';
import ActionButton from '../ui/ActionButton.astro';
import Badge from '../ui/Badge.astro';

export interface Props {
  certification: Certification;
  translations: Translations;
}

const { certification, translations } = Astro.props;
const { title, description, entity, url } = certification;
const { pdfBadge, downloadButton } = translations.certificationsPage;
---

<article>
  <h3 class='text-2xl mt-12 font-semibold text-blue-800/85 dark:text-yellow-200/90 mb-3'>
    {title}
  </h3>

  <p class='mb-6 text-gray-500/90 dark:text-white'>
    {description}
  </p>

  <div class='relative group mb-6'>
    <PDFViewer url={url} title={title} />
    
    <ActionButton href={url} download variant="secondary" class="absolute bottom-4 left-4">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
        <polyline points="7 10 12 15 17 10"></polyline>
        <line x1="12" y1="15" x2="12" y2="3"></line>
      </svg>
      {downloadButton}
    </ActionButton>
  </div>

  <footer class='flex items-end justify-start mt-6 gap-x-4 mb-16'>
    {entity && ENTITIES[entity] && (
      <Entity {...ENTITIES[entity]} />
    )}
  </footer>
</article>
