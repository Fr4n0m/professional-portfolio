      typing 3.5s steps(30, end),
      blink-caret 0.8s step-end infinite;
  }

  .typewriter-mobile {
    animation:
      typing-mobile 3.5s steps(30, end),
      blink-caret 0.8s step-end infinite;
  }

  @keyframes typing-mobile {
    from {
      width: 0;
    }
    to {
