---
export const prerender = true;

import Layout from '@layouts/Layout.astro';
import Projects from '@components/Projects/Projects.astro';
import { textsJson } from '@utils/const';
import type { Translations } from '../../types/translations';

// Usar espa√±ol como idioma por defecto
const langJson = textsJson.es;
const translations: Translations = langJson;

// Asegurar que projectsPage existe antes de desestructurar
const projectsPage = translations.projectsPage || {};
const projectsTitle = projectsPage.projectsTitle || 'Proyectos';
const projectsDescription = projectsPage.projectsDescription || 'Mis proyectos';
---

<Layout
  title={projectsTitle}
  description={projectsDescription}
  json={langJson}
>
  <section class='px-8' id="all-projects" data-section="all-projects">
    <Projects translations={translations} />
  </section>
</Layout>

<script is:inline src="/projects/projects-header-fix.js"></script>
