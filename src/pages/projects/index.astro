---
export const prerender = true;

import Layout from '@layouts/Layout.astro';
import Projects from '@components/Projects/Projects.astro';
import { textsJson } from '@utils/const';
import type { Translations } from '../../types/translations';

// Usar espa√±ol como idioma por defecto
const langJson = textsJson.es;
const translations: Translations = langJson;

const { projectsTitle, projectsDescription } = translations.projectsPage || {
  projectsTitle: 'Proyectos',
  projectsDescription: 'Mis proyectos'
};
---

<Layout
  title={projectsTitle}
  description={projectsDescription}
  json={langJson}
>
  <section class='px-8'>
    <Projects translations={translations} />
  </section>
</Layout>
