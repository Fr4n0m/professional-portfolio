{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"baseUrl": ".",
		"skipLibCheck": true,
		"noImplicitAny": false,
		"allowJs": true,
		"checkJs": false,
		"noEmit": true,
		"paths": {
			"@components/*": ["src/components/*"],
			"@assets/*": ["src/assets/*"],
			"@utils/*": ["src/utils/*"],
			"@hooks/*": ["src/hooks/*"],
			"@pages/*": ["src/pages/*"],
			"@layouts/*": ["src/layouts/*"],
			"@icons/*": ["src/icons/*"],
			"@types/*": ["src/types/*"],
			"@translations/*": ["src/translations/*"],
			"@styles/*": ["src/styles/*"],
			"@config/*": ["src/config/*"],
			"@scripts/*": ["src/scripts/*"],
			"@ui/*": ["src/components/ui/*"],
			"@i18n/*": ["src/i18n/*"],
			"@data/*": ["src/data/*"],
			"../i18n/utils": ["src/i18n/utils.ts"]
		}
	}
}
